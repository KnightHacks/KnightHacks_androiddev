<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profile_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:text="Profile"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/scan_code_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_text_view"
        android:layout_marginTop="30dp"
        android:text="@string/ScanQRCodeText"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/qr_code_placeholder_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/scan_code_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        app:srcCompat="@drawable/ic_qr_code" />

    <Button
        android:id="@+id/scan_qr_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_code_placeholder_image_view"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"
        android:text="@string/ScanQRButtonText"
        android:textColor="#2196F3"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/line_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_qr_code_button"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"
        android:rotation="90"
        android:scaleY="4.5"
        app:srcCompat="@android:drawable/status_bar_item_background" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_bar"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"
        android:text="Settings"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/alternative_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_button"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"
        android:text="@string/alternative_login"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alternative_login"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textSize="25sp" />

</RelativeLayout>