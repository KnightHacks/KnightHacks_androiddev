<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sponsors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/schedule_horizontal_filter_search_component_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorHomePageCardPurple"
            android:orientation="horizontal"
            android:layout_weight="22"
            >

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sponsors_horizontal_section_card_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/schedule_horizontal_filter_search_component_container"
            android:layout_weight="78"
            >

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>